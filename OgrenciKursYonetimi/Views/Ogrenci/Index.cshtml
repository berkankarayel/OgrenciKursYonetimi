@model List<OgrenciKursYonetimi.Web.Data.Ogrenci>

<h2>Öğrenciler</h2>

<div class="mb-3">
    <a class="btn btn-primary" asp-action="Ekle">+ Öğrenci Ekle</a>
</div>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Eposta</th>
            <th>Telefon</th>
            <th style="width: 150px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ogr in Model)
        {
            <tr>
                <td>@ogr.OgrenciAd</td>
                <td>@ogr.OgrenciSoyad</td>
                <td>@ogr.Eposta</td>
                <td>@ogr.Telefon</td>
                <td>
                    <a class="btn btn-sm btn-info text-white" asp-action="Detay" asp-route-id="@ogr.OgrenciId">Detay</a>
                    <a class="btn btn-sm btn-danger"
                       asp-action="Sil"
                       asp-route-id="@ogr.OgrenciId"
                       onclick="return confirm('Bu öğrenciyi silmek istediğine emin misin?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
