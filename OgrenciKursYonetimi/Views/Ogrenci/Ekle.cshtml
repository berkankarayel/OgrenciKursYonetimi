@model OgrenciKursYonetimi.Web.Data.Ogrenci

@{
    ViewData["Title"] = "Öğrenci Ekle";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Ekle" method="post">
            <div class="mb-3">
                <label asp-for="OgrenciAd" class="form-label"></label>
                <input asp-for="OgrenciAd" class="form-control" />
                <span asp-validation-for="OgrenciAd" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OgrenciSoyad" class="form-label"></label>
                <input asp-for="OgrenciSoyad" class="form-control" />
                <span asp-validation-for="OgrenciSoyad" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Eposta" class="form-label"></label>
                <input asp-for="Eposta" class="form-control" />
                <span asp-validation-for="Eposta" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefon" class="form-label"></label>
                <input asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>


