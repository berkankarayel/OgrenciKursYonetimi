@model IEnumerable<OgrenciKursYonetimi.Web.Data.KursKayit>

@{
    ViewData["Title"] = "Kurs Kayıtları";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">+ Yeni Kayıt Ekle</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Öğrenci</th>
            <th>Kurs</th>
            <th style="width: 200px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int count = 1;
            foreach (var kayit in Model)
            {
                <tr>
                    <td>@count</td>
                    <td>@kayit.Ogrenci?.OgrenciAdSoyad</td>
                    <td>@kayit.Kurs?.Baslik</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@kayit.KayitId" class="btn btn-sm btn-warning">Güncelle</a>
                        <a asp-action="Delete" asp-route-id="@kayit.KayitId" class="btn btn-sm btn-danger" onclick="return confirm('Bu kaydı silmek istediğine emin misin?');">Sil</a>
                    </td>
                </tr>
                count++;
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">Hiç kayıt bulunamadı.</td>
            </tr>
        }
    </tbody>
</table>

