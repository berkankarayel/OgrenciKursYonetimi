@model List<OgrenciKursYonetimi.Web.Data.Kurs>

<h2>Kurslar</h2>

<div class="mb-3">
    <a class="btn btn-primary" asp-action="Ekle">+ Kurs Ekle</a>
</div>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Başlık</th>
            <th style="width:150px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kurs in Model)
        {
            <tr>
                <td>@kurs.Baslik</td>
                <td>
                    <a class="btn btn-sm btn-info text-white" asp-action="Detay" asp-route-id="@kurs.KursId">Detay</a>
                    <a class="btn btn-sm btn-danger" asp-action="Sil" asp-route-id="@kurs.KursId" onclick="return confirm('Bu kursu silmek istediğine emin misin?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
